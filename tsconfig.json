{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "esnext",
      "dom",
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "allowImportingTsExtensions": true,
    "declaration": false,
    "noEmitOnError": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": false,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "node_modules/next",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "env.d.ts",
  ]
}
